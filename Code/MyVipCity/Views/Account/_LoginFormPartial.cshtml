@using MyVipCity.Models

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "tab-pane active in fade", id = "top-nav-login" })) {
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Email Address" name="Email">
        <i class="form-group__bar"></i>
    </div>
    <div class="form-group">
        <input type="password" class="form-control" placeholder="Password" name="Password">
        <i class="form-group__bar"></i>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label>
                <input type="checkbox" class="form-control" name="RememberMe" value="true">
                <i class="input-helper"></i>
                Remember Me
            </label>
        </div>
    </div>

    <button class="btn btn-primary btn-block m-t-10 m-b-10" type="submit">Login</button>
    <div class="text-center">
        <a href="#top-nav-forgot-password" data-toggle="tab"><small>Forgot password?</small></a>
    </div>
}
